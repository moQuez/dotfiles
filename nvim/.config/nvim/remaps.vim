" Change the leader key to single quote
let g:mapleader="'"

" Editing
inoremap jk <ESC>
inoremap <ESC> <NOP>

" Handy tools
nnoremap <leader>s :w<CR>
nnoremap <leader>q :q<CR>

" Movement
noremap <C-l> <C-w>l
noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k

" Force using normal movement
noremap <Up> <nop>
noremap <Down> <nop>
noremap <Right> <nop>
noremap <Left> <nop>

inoremap <Up> <nop>
inoremap <Down> <nop>
inoremap <Right> <nop>
inoremap <Left> <nop>
